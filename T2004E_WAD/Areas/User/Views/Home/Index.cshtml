@model IEnumerable<T2004E_WAD.Models.Product>


@{
    ViewBag.Title = "Home";
    Layout = "~/Areas/User/Views/Shared/User_layout.cshtml";
   
}

<h2>Index</h2>

<!-- Top bar Start -->

<!-- Call to Action End -->
<!-- Featured Product Start -->
<div class="featured-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>Featured Product</h1>
        </div>
       

        <div class="row align-items-center product-slider product-slider-4">


            @foreach (var i in Model)
            {
                <div class="col-lg-3" style="margin-bottom ">

                    <div class="product-item">
                        <div class="product-title">
                            <a href="#">
                                @Html.DisplayFor(modelItem => i.Name)
                            </a>
                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div class="product-image">
                            <a href="product-detail.html">
                                <img src="~/@i.Image"  />
                            </a>
                            <div class="product-action">
                                <a href="#"><i class="fa fa-cart-plus"></i></a>
                                <a href="#"><i class="fa fa-heart"></i></a>
                                <a href="#"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="product-price">
                            <h3>
                                <span>$</span>
                                @Html.DisplayFor(modelItem => i.Price)
                            </h3>

                           
                                @Html.ActionLink("Buy now", "AddToCart", new { id = i.Id, Qty = 1,@class="btn"})
                          
                        </div>
                    </div>
                  
                </div>
            }


            </div>
       
    </div>
</div>
<!-- Featured Product End -->
